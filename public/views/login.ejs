<% include head %>

<link href="/stylesheets/login.css" rel="stylesheet" type="text/css">
<script src="/javascripts/login.js"></script>

<div class="login-area" id="login">
	<form accept-charset="UTF-8" action="/users/login" method="post">
		<div class="login-form-header">
			<h1><%= loginHeader %></h1>
		</div>
		<div class="form-body">
			<label for="login_account">
				<%= loginEmail %>
			</label>
			<input autocapitalize="off" autocorrect="off" autofocus="autofocus" class="input-block" id="login_account" name="account" placeholder="<%= loginEmail %>" tabindex="1" type="email">

			<label for="login_password">
				<%= loginPassword %> <a tabindex="2" href="/users/forgot_password"><%= loginForgetPassword %></a>
			</label>
			<input class="input-block" id="login_password" name="password" placeholder="<%= loginPassword %>" tabindex="3" type="password">
			<input class="button" tabindex="4" type="submit" value="<%= loginCommit %>">
		</div>
	</form>
</div>

<% include foot %>
